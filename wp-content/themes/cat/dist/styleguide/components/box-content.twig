{% set box_content_class = 'bg--gradient-red white' %}
{% set box_content_image = '../images/Catena_Media.jpg' %}
{% set box_content = [
    {
      'box_content_title' : 'Mission',
      'box_content_description' : 'To provide the most valuable online and mobile leads for clients in carefully selected industries.',
      'box_content_list_class' : 'list--unordered-white'
    },
    {
      'box_content_title' : 'vision',
      'box_content_description' : 'To become the worldâ€™s number one provider of high-value iGaming leads.',
      'box_content_list_class' : 'list--unordered-white'
    },
    {
      'box_content_title' : 'Strategy growth',
      'box_content_description' : 'To grow and expand quickly, but in a scalable way, ensuring we retain the best talent.',
      'box_content_list_class' : 'list--unordered-white'
    }
  ]
%}

{% block boxContent %}
  <div class="box-content bg--gradient-red {{ box_content_class }}">
    <div class="box-content__image"><img src="{{ box_content_image }}"></div>
    <div class="container-wide">
      <div class="box-content__list">
        {% for item in box_content %}
          <div class="box-content__item">
            <div class="box-content__title">{{ item.box_content_title }}</div>
            <div class="box-content__description">{{ item.box_content_description }}</div>
            <div class="box-content__body">
              <ul class="list {{ item.box_content_list_class }}">
                <li>To create and provide quality content across all of our sites.</li>
                <li>To attract potential customers and direct them to our clients sites.</li>
                <li>To hold a unique insight into the complicated algorithms used by search engines.</li>
                <li>To have a large number of sites at our disposal and to keep them maintained.</li>
              </ul>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}
