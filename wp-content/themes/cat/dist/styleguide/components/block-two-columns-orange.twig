{% block two_columns3 %}
  <div class="block-two-columns columns-direction">
    <div class="block-two-columns__item bg--orange white">
      <div class="block-two-columns__content ">
        <div class="block-two-columns__group block-two-columns__group--inner block-location">
          <div class="block-two-columns__title"><i class="icon-location"></i>Belgrade</div>
          <div class="block-two-columns__body">
            <p>Join us in Sliema and watch your productivity flourish as you enjoy the mesmerizing view of the Mediterranean Sea</p>
          </div>
          <div class="block-two-columns__number-list">
            <div class="block-two-columns__number-list__item">
              <div class="block-two-columns__number-list__quantity">32</div>
              <div class="block-two-columns__number-list__text">Employees</div>
            </div>
            <div class="block-two-columns__number-list__item">
              <div class="block-two-columns__number-list__quantity">2</div>
              <div class="block-two-columns__number-list__text">Open Positions</div>
            </div>
          </div>
          <div class="block-two-columns__button">
            <a href="#open-positions" class="btn btn--bg-white btn--text-orange js-scroll-down">open positions</a>
            <a href="#" class="btn btn--bg-transparent btn--text-orange js-click-location">benefits</a>
          </div>
        </div>
        {% include 'block-icon-small.twig' %}
        <div class='js-close-icon-small hidden'>x</div>
      </div>
    </div>
    <div class="block-two-columns__item">
      <div class="block-two-columns__image">
        <img src="../images/images-demo/location2.jpg" alt="images two columns">
      </div>
    </div>
  </div>
{% endblock %}
