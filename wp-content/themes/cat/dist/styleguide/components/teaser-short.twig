%}
<div class="container-wide">
  <div class="teaser-detail teaser-detail--short">
    <div class="teaser-detail__list">
    {% for item in teaser_short %}
      <div class="teaser-detail__item">
        <h3 class="teaser-detail__title">{{ item.teaser_short_title }}</h3>
        <div class="teaser-detail__item__group">
          <div class="teaser-detail__item__group__contentlink">
            {% if item.teaser_short_live is not empty %}
            <div class="teaser-detail__live"><a href="">{{ item.teaser_short_live }}</a></div>
            <div class="teaser-detail__social calendar-event js-calendar-event">
              <var class="calendar-event__data">
                <var class="calendar-event__title">Get on the front</var>
                <var class="calendar-event__date-start">June 15, 2013 19:00</var>
                <var class="calendar-event__date-end">June 15, 2013 23:00</var>
                <var class="calendar-event__address">Tatooine</var>
                <var class="calendar-event__description">Get on the front page</var>
              </var>
              <span class="calendar-event__link">Add to calendar</span>
            </div>
            {% endif %}
            {% if item.teaser_short_event is not empty %}
            <div class="teaser-detail__event"><a href="">{{ item.teaser_short_event }}</a></div>
            {% endif %}
            <div class="teaser-detail__social">
              <div class="teaser-detail__social__text js-social-download">
              {% if item.teaser_short_sicial is not empty %}
                 {{ item.teaser_short_sicial }}
              {% endif %}
              {% if item.teaser_short_dowload is not empty %}
                {{ item.teaser_short_dowload }}
              {% endif %}
              </div>
              <div class="teaser-detail__social__group">
                {% for content in item.contents %}
                  {% if content.google is not empty %}
                  <div class="teaser-detail__social__google"><a href="">{{ content.google }}</a></div>
                  {% endif %}
                  {% if content.outlook is not empty %}
                  <div class="teaser-detail__social__outlook"><a href="">{{ content.outlook }}</a></div>
                  {% endif %}
                  {% if content.yahoo_mail is not empty %}
                  <div class="teaser-detail__social__yahoomail"><a href="">{{ content.yahoo_mail }}</a></div>
                  {% endif %}
                  {% if content.apple_mail is not empty %}
                  <div class="teaser-detail__social__applemail"><a href="">{{ content.apple_mail }}</a></div>
                  {% endif %}
                  {% if content.exel is not empty %}
                  <div class="teaser-detail__social__excel"><a href="">{{ content.exel }}</a></div>
                  {% endif %}
                  {% if content.pdf is not empty %}
                  <div class="teaser-detail__social__pdf"><a href="">{{ content.pdf }}</a></div>
                  {% endif %}
                  {% if content.word is not empty %}
                  <div class="teaser-detail__social__word"><a href="">{{ content.word }}</a></div>
                  {% endif %}
                  {% if content.powerpoint is not empty %}
                  <div class="teaser-detail__social__powerpoint"><a href="">{{ content.powerpoint }}</a></div>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          </div>
          {% if item.teaser_short_date is not empty %}
          <div class="teaser-detail__date"><i class="icon-time"></i> {{ item.teaser_short_date }}</div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
    </div>
    {% include 'pager.twig' %}
  </div>
</div>
