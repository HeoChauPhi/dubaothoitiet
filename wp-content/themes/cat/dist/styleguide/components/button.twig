{% block button %}
<div class="container-wide">
  <p><a class="btn" href="#">Default</a><a class="btn btn--medium" href="#">Medium</a><a class="btn btn--small" href="#">Small</a></p>
  <p class="bg--gradient-red">
    <a class="btn btn--bg-transparent btn--text-red" href="#">Text Red</a>
    <a class="btn btn--bg-white btn--text-red" href="#">Text Red</a>
  </p>

  <p class="bg--orange">
    <a class="btn btn--bg-transparent btn--text-orange" href="#">Text Orange</a>
    <a class="btn btn--bg-white btn--text-orange" href="#">Text Orange</a>
  </p>

  <p style="display: flex; background-color: #eceded;">
    <a class="btn btn--bg-light btn--text-red" href="#">Text Red</a>
    <a class="btn btn--bg-light btn--text-red btn--has-icon" href="#">Has icon</a>
  </p>
</div>
{% endblock %}
