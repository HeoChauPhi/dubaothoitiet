{% block form %}
<div class="container-wide">
  <form>
    <div class="form-type-textfield">
      <input type="text" maxlength="60" size="60" class="form-text" placeholder="Text input label">
    </div>
    <div class="form-item form-type-textfield form-item-name">
      <input type="text" maxlength="60" size="60" class="form-text error" placeholder="Text input error">
    </div>
    <div class="form-type-textfield">
      <input type="text" maxlength="60" size="60" class="form-text success" placeholder="Text input success">
    </div>
    <div class="form-type-select">
      <select>
        <option value="Choose office">Choose Office</option>
        <option value="Lodon">Lodon</option>
        <option value="Belgrade">Belgrade</option>
        <option value="Sliema">Sliema</option>
      </select>
    </div>
    <div class="form-type-textarea">
      <div class="form-textarea-wrapper resizable textarea-processed resizable-textarea">
        <textarea class="form-textarea" rows="5" cols="60"></textarea>
      </div>
    </div>
    <div class="form-actions">
      <input type="submit" class="form-submit" value="Submit">
    </div>
  </form>
</div>
{% endblock %}
