    {% for item in icon_small %}
    <div class="block-icon-small__item">
      <div class="block-icon-small__image"><img src="{{ item.icon_small_image}}"></div>
      <div class="block-icon-small__group">
        <div class="block-icon-small__title">{{ item.icon_small_title }}</div>
        <div class="block-icon-small__body">{{ item.icon_small_content }}</div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
