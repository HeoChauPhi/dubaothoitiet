{% set icon_small = [
    {
      'icon_small_image' : '../images/icon-health.png',
      'icon_small_title' : 'health',
      'icon_small_content' : 'To provide the most valuable online and mobile leads for clients in carefully selected industries.'
    },
    {
      'icon_small_image' : '../images/icon-food.png',
      'icon_small_title' : ' Food',
      'icon_small_content' : 'To provide the most valuable online and mobile leads for clients in carefully selected industries.'
    },
    {
      'icon_small_image' : '../images/icon-fun.png',
      'icon_small_title' : 'Fun',
      'icon_small_content' : 'To provide the most valuable online and mobile leads for clients in carefully selected industries.'
