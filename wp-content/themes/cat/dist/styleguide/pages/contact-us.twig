{% extends '../layouts/layout.twig' %}
{% block content %}
  {% block blockContact %}
    <div class="main-content no-padding">
      <div class="container-wide">
      <div class="block-contact-form">
        <h2 class="section-title">Contact</h2>
        <form class="form-wrapper">
          <div class="form-type-textfield">
            <input type="text" maxlength="60" size="60" class="form-text" placeholder="Full Name">
          </div>
          <div class="form-type-textfield">
            <input type="email" maxlength="60" size="60" class="form-text" placeholder="Email">
          </div>
          <div class="form-type-select">
            <select>
              <option value="Choose office">Choose Office</option>
              <option value="Lodon">Lodon</option>
              <option value="Belgrade">Belgrade</option>
              <option value="Sliema">Sliema</option>
            </select>
          </div>
          <div class="form-type-textarea">
            <div class="form-textarea-wrapper resizable textarea-processed resizable-textarea">
              <textarea class="form-textarea" rows="10" cols="60"></textarea>
            </div>
          </div>
          <div class="form-actions">
            <input type="submit" class="form-submit btn--small" value="Send a message">
          </div>
        </form>
      </div>
    </div>
    </div>
  {% endblock %}
{% endblock %}
